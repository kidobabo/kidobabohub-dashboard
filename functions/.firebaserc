exports.addAttendance = onCall(async (req) => {
  const uid = requireAuth(req);
  const me = await requireOrg(uid);

  if (!["admin", "teacher"].includes(me.role)) {
    throw new HttpsError("permission-denied", "Only admin/teacher can add attendance.");
  }

  const studentId = (req.data?.studentId || "").trim();
  const status = String(req.data?.status || "present").trim().toLowerCase(); // present|absent|late
  const dateStr = (req.data?.date || "").trim(); // optional: YYYY-MM-DD
  const note = (req.data?.note || "").trim();

  if (!studentId) throw new HttpsError("invalid-argument", "studentId required.");
  if (!["present", "absent", "late"].includes(status)) {
    throw new HttpsError("invalid-argument", "status must be present/absent/late.");
  }

  const stDoc = await db.collection("orgs").doc(me.orgId).collection("students").doc(studentId).get();
  if (!stDoc.exists) throw new HttpsError("not-found", "Student not found.");
  const student = stDoc.data() || {};

  const dayKey = dateStr || new Date().toISOString().slice(0, 10);

  await db.collection("orgs").doc(me.orgId).collection("attendance").add({
    orgId: me.orgId,
    studentId,
    studentName: student.name || "",
    className: student.className || "",
    dayKey,
    status,
    note,
    createdBy: uid,
    createdAt: nowTS(),
  });

  return { ok: true, dayKey, status };
});

